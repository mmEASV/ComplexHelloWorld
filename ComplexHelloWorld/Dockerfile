FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
USER $APP_UID
WORKDIR /app
EXPOSE 80
EXPOSE 8081

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
ARG BUILD_CONFIGURATION=Release
WORKDIR /src
COPY ["ComplexHelloWorld/ComplexHelloWorld.csproj", "ComplexHelloWorld/"]
RUN dotnet restore "ComplexHelloWorld/ComplexHelloWorld.csproj"
COPY . .
WORKDIR "/src/ComplexHelloWorld"
RUN dotnet build "ComplexHelloWorld.csproj" -c $BUILD_CONFIGURATION -o /app/build

FROM build AS publish
ARG BUILD_CONFIGURATION=Release
RUN dotnet publish "ComplexHelloWorld.csproj" -c $BUILD_CONFIGURATION -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "ComplexHelloWorld.dll"]
